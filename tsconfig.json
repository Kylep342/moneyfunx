{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "module": "es6",
    "outDir": "./build",
    "strict": true,
    "target": "es2015",
    "types": [],
    "esModuleInterop": true,

    "baseUrl": ".",
    "paths": {
      // Maps '@/' alias from vite.config.js to relative path in baseUrl
      "@/*": ["src/*"]
    }
  },
  "include": ["./src", "./tests"],
  "exclude": ["node_modules", "build"]
}
